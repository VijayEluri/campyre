<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	
	android:focusable="false"
	
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	
	android:background="@color/message_text_background"
	>
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
	
		<TextView android:id="@+id/person"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			
			android:layout_margin="5dp"
			
			android:gravity="center"
			
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="@android:color/white"
			
			android:text="Eric M."
			/>
			
		<View android:id="@+id/message_text_divider"
			android:layout_width="1dp"
			android:layout_height="fill_parent"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:background="@color/message_text_divider"
			/>
		
		<TextView android:id="@+id/text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
		
			android:autoLink="web"
			
			android:textSize="14sp"
			android:textColor="@color/message_text_foreground"
			android:textColorLink="@color/message_text_foreground_link"
			
			android:text="This is a message I said in the Campfire. I love talking into lists. Now let's wrap it to multiple lines."
			/>
	
	</LinearLayout>
	
	<ImageView android:id="@+id/image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		
		android:gravity="center"
		/>
  	
</LinearLayout>